<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">
    <changeSet id="release-1.0" author="w-jadczak">
        <comment>"Database initialisation with table message"</comment>
        <createTable tableName="message">
            <column name="id" type="uuid">
                <constraints
                        primaryKey="true"
                        nullable="false"
                        unique="true"
                />
            </column>
            <column name="type" type="varchar(100)">
                <constraints
                        nullable="false"
                />
            </column>
            <column name="subject" type="varchar(1024)">
                <constraints
                        nullable="false"
                />
            </column>
            <column name="body" type="text" />
            <column name="receiver_email" type="varchar(255)">
                <constraints
                        nullable="false"
                />
            </column>
            <column name="message_status" type="varchar(100)" />
            <column name="send_date" type="timestamp" />
            <column name="event_date" type="timestamp" />
            <column name="attachment" type="oid" />
        </createTable>
    </changeSet>
</databaseChangeLog>